<configuration>
  <property>
    <name>dfs.replication</name>
    <value>1</value>
  </property>
  <!-- Directorio de almacenamiento del NameNode -->
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>file:///usr/local/hadoop/hadoop_storage/hdfs/namenode</value>
  </property>
  <!-- Directorio de almacenamiento del DataNode -->
  <property>
      <name>dfs.datanode.data.dir</name>
      <value>file:///usr/local/hadoop/hadoop_storage/hdfs/datanode</value>
  </property>

  <property>
    <name>dfs.client.use.datanode.hostname</name>
    <value>true</value>
  </property>
  
  <property>
    <name>dfs.datanode.use.datanode.hostname</name>
    <value>true</value>
  </property>

  <property>
      <name>dfs.datanode.address</name>
      <value>0.0.0.0:50010</value>
  </property>
  <property>
      <name>dfs.datanode.http.address</name>
      <value>0.0.0.0:50075</value>
  </property>

  <!-- Permitir que el NameNode de Hadoop escuche en todas las interfaces -->
  <property>
    <name>dfs.namenode.rpc-bind-host</name>
    <value>0.0.0.0</value>
  </property>
  <property>
    <name>dfs.namenode.servicerpc-bind-host</name>
    <value>0.0.0.0</value>
  </property>
</configuration>